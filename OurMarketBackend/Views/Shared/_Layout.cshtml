@using Microsoft.AspNetCore.Identity
@inject UserManager<OurMarketBackend.Models.ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OURMARKET</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header class="navbar">
        <div class="logo">OURMARKET</div>
        <nav class="nav-links">
            <a href="~/">Home</a>
            <a href="~/Listings">Browse</a>
            <a href="~/Listings/Create">Post</a>
            <a href="~/Account/Account">Account</a>
        </nav>
        <div class="account-section">
            @if (User?.Identity != null && User.Identity.IsAuthenticated)
            {
                @inject UserManager<OurMarketBackend.Models.ApplicationUser> UserManager
                var user = await UserManager.GetUserAsync(User);
                <span>Welcome, @(user?.FirstName ?? User.Identity.Name)!</span>
                <a href="~/Account/Logout">Logout</a>
            }
            else
            {
                <a href="~/Account/Login">Login</a>
                <a href="~/Account/Register">Register</a>
            }
        </div>
    </header>
    @RenderBody()
    <footer>
        <p>© 2025 OURMARKET | Team 4</p>
    </footer>

    @RenderSection("Scripts", required: false)

</body>
</html>
