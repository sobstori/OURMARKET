@using Microsoft.AspNetCore.Identity
@inject UserManager<OurMarketBackend.Models.ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OURMARKET</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header class="navbar">
        <div class="logo">OURMARKET</div>
        <nav class="nav-links">
            <a href="~/">Home</a>
            <a href="~/Browse">Browse</a>
            <a href="~/Listings/Create">Post</a>
            <a href="~/Account/Account">Account</a>
        
            @if (User?.Identity != null && User.Identity.IsAuthenticated)
            {
                <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                    <button type="submit" class="logout-button">Logout</button>
                </form>
            }
            else
            {
                <a href="~/Account/Login">Login</a>
                <a href="~/Account/Register">Register</a>
            }
        <nav>
    </header>
    @RenderBody()
    <footer>
        <p>© 2025 OURMARKET | Team 4</p>
    </footer>

    @RenderSection("Scripts", required: false)

</body>
</html>
