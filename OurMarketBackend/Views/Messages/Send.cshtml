@model OurMarketBackend.ViewModels.SendMessageViewModel

@{
    ViewData["Title"] = "Send Message";
}

<h2>Send Message to @Model.ReceiverEmail</h2>

<form asp-action="Send" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="ReceiverId" />

    <div>
        <textarea asp-for="Content" rows="5" placeholder="Type your message here..." style="width:100%;"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Send</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
