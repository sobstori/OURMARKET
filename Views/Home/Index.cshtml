@if (TempData["LoginMessage"] != null)
{
    <div class="login-message" style="text-align:center; color:green; font-weight:bold;">@TempData["LoginMessage"]</div>
}
@{
    ViewData["Title"] = "Home";
}

<section class="hero">
    <h1>Welcome to OURMARKET</h1>
    <p>A clean, modern marketplace for local listings.</p>
    <a asp-controller="Listings" asp-action="Index" class="cta-button">Start Browsing</a>
</section>

<section class="features">
    <div class="feature">
        <h2>Post Listings with Ease</h2>
        <p>List items, jobs, or services in seconds with our simple form.</p>
    </div>
    <div class="feature">
        <h2>Filter by Location & Category</h2>
        <p>Find exactly what you're looking for, where you need it.</p>
    </div>
    <div class="feature">
        <h2>Message Without Leaving the Site</h2>
        <p>Keep conversations in one place — built-in chat coming soon!</p>
    </div>
</section>
