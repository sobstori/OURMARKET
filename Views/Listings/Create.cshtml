@model OurMarketBackend.Models.Listing
@{
    ViewData["Title"] = "Post a New Listing";
}
<h1>Post a New Listing</h1>

<form asp-action="Create" method="post" class="post-form">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>

    <label asp-for="Title"></label>
    <input asp-for="Title" placeholder="Ex: Selling my MacBook Air" />
    <span asp-validation-for="Title" class="text-danger"></span>

    <label asp-for="Price"></label>
    <input asp-for="Price" type="number" step="0.01" />
    <span asp-validation-for="Price" class="text-danger"></span>

    <label asp-for="Category"></label>
    <select asp-for="Category">
        <option value="">Select a category</option>
        <option>Electronics</option>
        <option>Furniture</option>
        <option>Clothing</option>
        <option>Jobs</option>
        <option>Other</option>
    </select>
    <span asp-validation-for="Category" class="text-danger"></span>

    <label asp-for="Location"></label>
    <input asp-for="Location" />
    <span asp-validation-for="Location" class="text-danger"></span>

    <label asp-for="ImageUrl"></label>
    <input asp-for="ImageUrl" />
    <span asp-validation-for="ImageUrl" class="text-danger"></span>

    <label asp-for="Description"></label>
    <textarea asp-for="Description" rows="5"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>

    <button type="submit" class="cta-button">Post Listing</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
